<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Microlab.UiDesktop.MainWindow"
        Width="800" Height="600"
        Title="MicroLab Simulator">
    <StackPanel Margin="10">
        <Button Content="Run" Click="OnRunClicked" HorizontalAlignment="Left"/>
        <TextBox x:Name="CodeBox" AcceptsReturn="True" FontFamily="Consolas" Height="300"/>
        <TextBlock x:Name="OutputBlock" Margin="0,10,0,0" FontFamily="Consolas" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
